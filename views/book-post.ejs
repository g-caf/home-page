<%- include('partials/head', { title: bookPost.title }) %>
<body class="book-post-page">
    <%- include('partials/header') %>

    <main class="book-post-content">
        <article class="book-post-article">
            <% if (bookPost.image_url) { %>
                <div class="book-post-image">
                    <img src="<%= bookPost.image_url %>" alt="<%= bookPost.title %>">
                </div>
            <% } %>

            <div class="book-post-header">
                <h1 class="book-post-title"><%= bookPost.title %></h1>
                <% if (bookPost.subtitle) { %>
                    <h2 class="book-post-subtitle"><%= bookPost.subtitle %></h2>
                <% } %>
                <p class="book-post-date"><%= new Date(bookPost.published_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
            </div>

            <% if (bookPost.content) { %>
                <div class="book-post-body">
                    <%= bookPost.content %>
                </div>
            <% } %>
        </article>
    </main>

    <%- include('partials/footer') %>
</body>
